{
  "name": "cat-energy-18",
  "version": "17.0.0",
  "private": true,
  "description": "Личный проект «Кэт энерджи» от HTML Academy",
  "devDependencies": {
    "autoprefixer": "9.5.x",
    "browser-sync": "2.26.x",
    "del": "^5.1.0", // уделение файлов и директорий
    "gulp": "4.0.x",
    "gulp-csso": "^4.0.1", // Minify CSS
    "gulp-imagemin": "^6.2.0", // Minify PNG, JPEG, GIF and SVG
    "gulp-less": "4.0.x",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "8.0.x",
    "gulp-posthtml": "^3.0.4", // Обработка html
    "gulp-rename": "^2.0.0", // Переименование файлов
    "gulp-sourcemaps": "2.6.x",
    "gulp-svgstore": "^7.0.1", // Создания элемента <symbol>
    "gulp-webp": "^4.0.1", // Создание WebP
    "posthtml-include": "^1.3.2", // Интеграция спрайта в html
    "@htmlacademy/editorconfig-cli": "1.x",
    "stylelint": "10.1.x",
    "stylelint-config-htmlacademy": "0.1.x"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/less/**/*.less\" --syntax less",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp css",
    "start": "gulp start"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/less/**/*.less"
  ],
  "engines": {
    "node": "8.16"
  }
}
